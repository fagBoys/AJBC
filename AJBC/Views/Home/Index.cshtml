        </div>

    </section>
    <!--Services End-->

    <section class="SectionThree">
        <!--Why us?-->
        <div class="container-fluid">
            <div class="col-md-6">
                <ul class="S3-Text-Column-Style">
                    <h1 class="S3-Text-Title-Style">Why us?</h1>
                    <li style="list-style-type: none;" class="S3-Text-Style">Bring calmness to your house width our design.</li>
                </ul>
            </div>
            <div class="col-md-6">
                <!-- Empty column -->
            </div>
        </div>
    </section>
    <!-- SectionFourStart : -->
    <!-- Contact us -->

    <section class="SectionFour">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-6">

                    <div class="contact-content-style">
                        <h1 class="heading-style">Contact</h1>
                        <p class="contact-paragraph-style">Our experts are ready to solve the solutions you need 365/24/7. Call or email us now.</p>
                        <form class="contact-form-style" action="index.html" method="post">
                            <div class="row">

                                <div class="col-lg-6">
                                    <input type="text" placeholder="Firstname" class="contact-input-style" name="Firstname" value="">
                                </div>
                                <div class="col-lg-6">
                                    <input type="text" placeholder="Lastname" class="contact-input-style" name="Lastname" value="">
                                </div>

                            </div>
                            <div class="row">

                                <div class="col-lg-6">
                                    <input type="text" placeholder="Email address" class="contact-input-style" name="Emailaddress" value="">
                                </div>
                                <div class="col-lg-6">
                                    <input type="text" placeholder="Subject" class="contact-input-style" name="Subject" value="">
                                </div>

                            </div>
                            <div class="row">

                                <div class="col-lg-12">
                                    <textarea type="text" placeholder="Message" class="contact-textarea-style" name="Message" value=""></textarea>
                                </div>

                            </div>
                            <div class="row">
                                <div class="col-lg-12" style="text-align: center; padding: 3% 0% 3% 0%;">
                                    <button type="submit" class="btn btn-primary" asp-controller="Home" asp-action="Contact" asp-route-Firstname="Firstname" asp-route-Lastname="Lastname" asp-route-Emailaddress="Emailaddress" asp-route-Subject="Subject" asp-route-Message="Message" name="button">Send</button>
                                </div>
                            </div>
                        </form>
                    </div>

                </div>
                <div class="col-lg-6 contact-image-style">

                </div>
            </div>
        </div>
    </section>

    <!-- SectionFourEND -->
    <section class="SectionFive" style="margin: auto; padding:5%;">

        <div class="row">
            <div class="col-lg-12">
                <h1 class="ReviewsMainTitle">
                    Reviews
                </h1>
            </div>
        </div>

        <!--Reviews-->
        <div class="container">
            <div class="row" style="margin-top:5%;">



                <div class="card mb-0 card-Style">
                    <div class="row g-0 align-items-center">
                        <div class="col-md-3" style="">
                            @{ 
                                var base64 = Convert.ToBase64String(Model.Picture);
                                var RevPic = string.Format("data:image/jpg;base64,{0}",base64);
                            }
                            <img src="@RevPic" width="180px" height="180px" class="" style="margin: auto; border: 10px solid #625321;" alt="@Model.Name">


                        </div>
                        <div class="col-md-9" style="padding-left:10%; padding-right:20%;">
                            <div class="card-body">
                                <h4 class="card-title review-title">@Model.Name</h4>
                                <p class="card-text">@Model.Message</p>
                                <!-- <p class="card-text"><small class="text-muted">Last updated 3 mins ago</small></p> -->
                            </div>
                        </div>
                    </div>
                </div>

                <!--
                <div class="col-lg-2">

                    <img src="~/img/reviewpic.jpg" alt="">

                </div>
